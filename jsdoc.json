{
    "plugins": ["plugins/markdown", "jsdoc-route-plugin"], 
    "recurseDepth": 10,
    "source": {
        "include":["controllers" , "routes"],
        "includePattern": ".js$",
        "excludePattern": "(node_modules/|docs)"
    },
    "sourceType": "module",
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": true
    },
    "opts": {
        "destination": "./jsdoc",          
        "recurse": true             
    }
}