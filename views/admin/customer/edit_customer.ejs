<!-- Modal -->
<div class="modal fade" id="edit-modal" role="dialog" tabindex="-1" aria-labelledby="edit-modal" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Update Customer</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <form action="/admin/customer?_method=PUT" method="POST">
          <div class="modal-body">
            <div class="form-group">
              <label for="name">No Member</label>
              <input  type="text" class="form-control no_member" name="no_member" placeholder=""
                required />
          </div>
            <div class="form-group">
                <label for="name">NIK</label>
                <input  type="number" class="form-control nik" name="nik" placeholder=""
                  required />
            </div>

            <div class="form-group">
                <label for="name">Nama</label>
                <input type="text" class="form-control name" name="name" placeholder=""
                  required />
            </div>

            <div class="form-group">
              <label for="name">Instagram</label>
              <input type="text" class="form-control username_ig" name="username_ig" placeholder=""
                required />
            </div>
          </div>
          <div class="modal-footer">
            <input type="hidden" class="id" name="id" />
            <button type="button" class="btn btn-secondary" data-dismiss="modal">
              Close
            </button>
            <button type="submit" class="btn btn-primary">Update</button>
          </div>
        </form>
      </div>
    </div>
  </div>