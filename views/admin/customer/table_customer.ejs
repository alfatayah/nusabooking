<!-- DataTales Example -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#add-customer">
      <i class="fas fa-plus"></i>
    </button>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>No Member</th>
            <th>NIK</th>
            <th>Nama</th>
            <th>Instagram</th> 
            <th style="text-align: center;">Action</th>
          </tr>
        </thead>
        <tbody>
          <% for(let i = 0; i < customer.length; i++) { %>
          <tr>
            <td><%= customer[i].no_member %></td>
            <td><%= customer[i].nik %></td>
            <td><%= customer[i].name %></td>
            <td><%= customer[i].username_ig %></td>
            <td style="text-align: center;">
                <a href="javascript:void()" type="button" class="btn btn-warning btn-circle btn-sm button-update"
                data-id="<%= customer[i].id %>" data-nik="<%= customer[i].nik %>"  data-no_member="<%= customer[i].no_member %>"  data-name="<%= customer[i].name %>"
                  data-username_ig="<%= customer[i].username_ig %>" >
                  <i class="fas fa-edit"></i></a>
            </td>
          </tr>
          <% }%>
        </tbody>
      </table>
    </div>
  </div>
</div>
