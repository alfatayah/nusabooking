
<!-- Daterange Picker-->
<script type="text/javascript" src="/daterangepicker/daterangepicker.js"></script>
<link rel="stylesheet" type="text/css" href="/daterangepicker/daterangepicker.css" />


<!-- script date range -->
<script>
  $(function () {
    $('input[name="datetimes"]').daterangepicker({
      timePicker: true,
      timePicker24Hour: true,
      autoUpdateInput: false,
      minDate: new Date(),
      startDate: new Date(),
      locale: {
      cancelLabel: 'Clear',
      format: 'hh:mm DD-MMM-YY'
    }
    }).on('apply.daterangepicker', function (ev, picker) {
      if(picker.startDate.format('hh:mm DD-MMM-YY') == picker.endDate.format('hh:mm DD-MMM-YY')){
        $(this).val('');
      }else{
        $(this).val(picker.startDate.format('hh:mm DD-MM-YY') + ' | ' + picker.endDate.format('hh:mm DD-MM-YY'));
        var start = moment(picker.startDate.format('DD-MMM-YY'));
        var end = moment(picker.endDate.format('DD-MMM-YY'));
        var diff = end.diff(start, 'days');
        $("#days").val(diff);
  
        document.getElementById('start_date').value = picker.startDate.format('YYYY-MM-DD') + moment().format(' hh:mm');
        document.getElementById('end_date').value = picker.endDate.format('YYYY-MM-DD') + moment().format(' hh:mm');
      }
    })

    $('input[name="datetimes"]').on('cancel.daterangepicker', function (ev, picker) {
      $(this).val('');
    });

  });

</script>









